{
  "name": "@insidethesim/remix-dev",
  "version": "0.0.4",
  "description": "Development framework for Remix games",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "remix-dev": "./bin/remix-dev.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./dev-init": {
      "types": "./dist/dev-init.d.ts",
      "import": "./dist/dev-init.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "import": "./dist/mocks/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js"
    },
    "./vite": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.js"
    },
    "./dashboard": {
      "types": "./dist/dashboard.d.ts",
      "import": "./dist/dashboard.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./styles/*": "./dist/styles/*",
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src",
    "bin",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "clean": "rm -rf dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "styled-components": "^6.1.19",
    "@tailwindcss/vite": "^4.1.13",
    "tailwindcss": "^4.1.13",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "cheerio": "^1.1.2",
    "esbuild": "^0.20.2",
    "qrcode-terminal": "^0.12.0",
    "@vitejs/plugin-react": "^5.0.4"
  },
  "peerDependencies": {
    "vite": "^6.0.0",
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@types/styled-components": "^5.1.34",
    "typescript": "^5.9.2",
    "vite": "^6.3.6"
  }
}
