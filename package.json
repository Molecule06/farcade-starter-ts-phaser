{
  "name": "remix-starter-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Remix game development framework",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter playground dev",
    "dev:playground": "pnpm --filter playground dev",
    "build": "pnpm -r build",
    "build:remix-dev": "pnpm --filter @insidethesim/remix-dev build",
    "build:remix-game": "pnpm --filter @insidethesim/remix-game build",
    "clean": "pnpm -r clean",
    "sync:playground": "node scripts/sync-playground.js",
    "test:cli": "pnpm --filter @insidethesim/remix-game build && node packages/remix-game/bin/remix-game.js",
    "test:cli:local": "pnpm build:remix-game && node scripts/test-cli-local.js",
    "publish:remix-dev": "pnpm --filter @insidethesim/remix-dev publish",
    "publish:remix-game": "pnpm --filter @insidethesim/remix-game publish",
    "publish:all": "pnpm build && pnpm --filter @insidethesim/remix-dev publish && pnpm --filter @insidethesim/remix-game publish"
  },
  "keywords": [
    "game",
    "phaser",
    "farcade",
    "remix",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "fs-extra": "^11.2.0",
    "typescript": "^5.9.2"
  }
}
